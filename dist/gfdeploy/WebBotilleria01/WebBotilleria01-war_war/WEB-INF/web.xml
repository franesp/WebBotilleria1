<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValidacionDatosServlet</servlet-name>
        <servlet-class>SessionBean.ValidacionDatosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroClientesServlet</servlet-name>
        <servlet-class>SessionBean.RegistroClientesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscaProductoServlet</servlet-name>
        <servlet-class>SessionBean.BuscaProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerDatosProductoServlet</servlet-name>
        <servlet-class>SessionBean.ObtenerDatosProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarCliente</servlet-name>
        <servlet-class>SessionBean.EliminarCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidacionDatosServlet</servlet-name>
        <url-pattern>/ValidacionDatosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroClientesServlet</servlet-name>
        <url-pattern>/RegistroClientesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscaProductoServlet</servlet-name>
        <url-pattern>/BuscaProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerDatosProductoServlet</servlet-name>
        <url-pattern>/ObtenerDatosProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarCliente</servlet-name>
        <url-pattern>/EliminarCliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
